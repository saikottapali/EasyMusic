<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="composerPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FAFAF9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.ComposerController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Note:" />
        <ComboBox fx:id="noteBox" layoutX="60.0" layoutY="15.0" prefWidth="80.0" />

        <Label layoutX="160.0" layoutY="20.0" text="Duration:" />
        <ComboBox fx:id="durationBox" layoutX="230.0" layoutY="15.0" prefWidth="80.0" />

        <Button layoutX="330.0" layoutY="15.0" onAction="#handleAdd" text="Add" />

        <TextArea fx:id="patternDisplay" layoutX="20.0" layoutY="60.0" prefHeight="140.0" prefWidth="460.0" wrapText="true" />

        <Button layoutX="21.0" layoutY="207.0" onAction="#handlePlay" text="Play" />
        <Button layoutX="90.0" layoutY="207.0" onAction="#handleClear" text="Clear" />
      <Button fx:id="btn_return" layoutX="507.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleReturn" text="Return" />
      <TextField fx:id="titleField" layoutX="19.0" layoutY="288.0" promptText="Song Title" />
      <Label layoutX="20.0" layoutY="251.0" text="Song Details:" />
      <ComboBox fx:id="difficultyBox" layoutX="235.0" layoutY="288.0" prefWidth="150.0" promptText="Difficulty" />
      <CheckBox fx:id="privateCheckBox" layoutX="470.0" layoutY="292.0" mnemonicParsing="false" text="Private" />
      <Button fx:id="btn_save" layoutX="270.0" layoutY="348.0" mnemonicParsing="false" onAction="#handleSave" text="Save Song" />
      <Label fx:id="composer_label" layoutX="202.0" layoutY="211.0" textFill="RED" />
    </children>
</AnchorPane>
