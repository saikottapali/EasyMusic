<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.easymusicj.PlaySong"
      spacing="15" alignment="CENTER" prefWidth="400" prefHeight="500">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Dashboard message label -->
    <Label fx:id="dashboard_message" text="Select a song to play!" />

    <!-- List of songs -->
    <ListView fx:id="songListView" prefHeight="300" prefWidth="300" />

    <!-- Play button (optional if you want manual play) -->
    <Button fx:id="btn_playSong" text="Play Selected Song" onAction="#playSong" />

    <!-- Logout button -->
    <Button fx:id="btn_logout" text="Logout" onAction="#logout" />

</VBox>
