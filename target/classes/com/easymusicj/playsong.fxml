<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="15" style="-fx-background-color: #F29544;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.easymusicj.PlaySong">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Dashboard message label -->
    <Label fx:id="dashboard_message" text="Select a song to play!" textFill="#592807">
      <font>
         <Font name="Broadway" size="25.0" />
      </font></Label>

    <!-- List of songs -->
    <ListView fx:id="songListView" prefHeight="300" prefWidth="300" style="-fx-background-color: #F28241;" />

    <!-- Play button (optional if you want manual play) -->
    <Button fx:id="btn_playSong" onAction="#playSong" style="-fx-background-color: #F28241;" text="Play Selected Song" textFill="#592807">
      <font>
         <Font name="Bodoni MT" size="14.0" />
      </font></Button>

    <!-- Logout button -->
    <Button fx:id="btn_back" onAction="#back" style="-fx-background-color: #F28241;" text="Go Back" textFill="#592807">
      <font>
         <Font name="Bodoni MT" size="13.0" />
      </font></Button>

</VBox>
